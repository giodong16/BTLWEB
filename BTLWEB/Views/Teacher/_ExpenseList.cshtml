@model ExpenseList
<div class="table-responsive text-nowrap">
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-nowrap">
                <th>Mã</th>
                <th>Tên lớp</th>
                <th>Học phần</th>
                <th>Chi phí (mỗi tiết)</th>
                <th>Điều khiển</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.ExpenseId</td>
                    <td>@expense.Class.ClassName</td>
                    <td>@expense.Subject.SubjectName</td>
                    <td>@expense.ChargeAmount</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-sm btn-icon" asp-action="deleteExpense" asp-route-mid="@expense.ExpenseId"><i class="bx bx-trash"></i></a>
                            <a class="btn btn-sm btn-icon"><i class="bx bx-edit"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.Pagination.TotalPages > 1)
        {
            <li class="page-item @(Model.Pagination.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true" data-page="@(Model.Pagination.PageNumber - 1)">&lt;</a>
            </li>
            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Pagination.PageNumber ? "active" : "")">
                    <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.Pagination.PageNumber == Model.Pagination.TotalPages ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.Pagination.PageNumber + 1)">&gt;</a>
            </li>
        }
    </ul>
</nav>