@model TeacherAttendanceListViewModel
<div class="table-responsive text-nowrap">
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-nowrap">
                <th>Status</th>
                <th>Mã giảng viên</th>
                <th>Tên giảng viên</th>
                <th>Số điện thoại</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacherAttendance in Model.teacherAttendances)
            {
                <tr>


                    @if (teacherAttendance.Status == true)
                    {
                        <td>Tham gia</td>
                    }
                    else
                    {
                        <td>Vắng mặt</td>
                    }
                    <td>@teacherAttendance.TeacherId</td>
                    <td>@teacherAttendance.Teacher.Name </td>
                    <td>@teacherAttendance.Teacher.Mobile </td>
                    <td>@teacherAttendance.Teacher.Email </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.Pagination.TotalPages > 1)
        {
            <li class="page-item @(Model.Pagination.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true" data-page="@(Model.Pagination.PageNumber - 1)">&lt;</a>
            </li>
            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Pagination.PageNumber ? "active" : "")">
                    <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.Pagination.PageNumber == Model.Pagination.TotalPages ? "disabled" : "")">
                <a class="page-link" href="#" data-page="@(Model.Pagination.PageNumber + 1)">&gt;</a>
            </li>
        }
    </ul>
</nav>