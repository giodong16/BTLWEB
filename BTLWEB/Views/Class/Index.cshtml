@{
    ViewData["Title"] = "Danh sách lớp";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Class>

<div class="content-table">
    <div class="card">
        <h5 class="card-header">Danh sách lớp</h5>
        <div class="container">
            <div class="row" style="padding-bottom:30px">
                <div class="col-md-6 col-sm-12">
                    <form method="post" asp-action="index" asp-controller="class">
                        <div class="form-group" style="margin-top:0">
                            <label for="ClassName" style="margin-bottom:10px;">Tên lớp:</label>
                            <input type="text" class="form-control" id="ClassName" name="ClassName" placeholder="Nhập tên lớp" style="color: black;background-color: #e0e1ff;" required />
                            <button class="btn btn-primary" style="margin:0;margin-top:20px" type="submit">Thêm lớp</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr class="text-nowrap">
                                    <th>ID</th>
                                    <th>Tên lớp</th>
                                    <th>Điều khiển</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lop in Model)
                                {
                                    <tr>

                                        <td>@lop.ClassId</td>
                                        <td>@lop.ClassName</td>
                                        <td>
                                            <div class="d-flex">
                                                <a class="btn btn-sm btn-icon" asp-action="#" asp-route-mid="@lop.ClassId"> <i class="bx bx-trash"></i></a>
                                                <a class="btn btn-sm btn-icon" asp-action="edit" asp-route-mid="@lop.ClassId"><i class="bx bx-edit"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-container" style="justify-content:start" >
                        @Html.PagedListPager(Model, page => Url.Action("Index", new {page= page }))
                    </div>
                </div>
            </div>
        </div>
        
    </div>

</div>
