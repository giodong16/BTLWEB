@model Student

@{
    ViewData["Title"] = "Xóa sinh viên";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<div class="card">
    <h2 class="card-header">Xóa sinh viên</h2>
    <div class="container-form">
        <p>Bạn có chắc chắn muốn xóa sinh viên "@Model.Name" không?</p>
        <form method="post" asp-action="Delete" asp-controller="Student" asp-route-mid="@Model.StudentId">
            <input type="hidden" asp-for="@Model.StudentId" />
            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a class="btn btn-secondary" asp-action="Index" >Quay lại</a>
            </div>

        </form>
    </div>
</div>
